{
    "openapi": "3.0.3",
    "info": {
        "title": "LSBU Job Connect ATS"
    },
    "paths": {
        "/api/applicant/register": {
            "post": {
                "tags": ["Applicant"],
                "description": "applicant register api",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "username",
                                    "email",
                                    "password",
                                    "confirmPassword"
                                ],
                                "properties": {
                                    "username": {
                                        "type": "string",
                                        "example": "abu"
                                    },
                                    "email": {
                                        "type": "string",
                                        "example": "abusufians808@gmail.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "abusufians"
                                    },
                                    "confirmPassword": {
                                        "type": "string",
                                        "example": "abusufians"
                                    }
                                }
                            },
                            "example": {
                                "username": "abu",
                                "email": "abusufians808@gmail.com",
                                "password": "abusufians",
                                "confirmPassword": "abusufians"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "register new user",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "msg": {
                                            "type": "string",
                                            "example": "user created successful"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "409": {
                        "description": "Conflict"
                    },
                    "400": {
                        "description": "Bad Request"
                    }
                }
            }
        },
        "/api/auth/create-session": {
            "post": {
                "tags": ["Auth"],
                "description": "candidate login",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": ["email", "password"],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "example": "dilshansamarakoon2020@gmail.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "dilshan"
                                    }
                                }
                            },
                            "example": {
                                "email": "dilshansamarakoon2020@gmail.com",
                                "password": "dilshan"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "login candidate user",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "msg": {
                                            "type": "string",
                                            "example": "login success!"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "msg": {
                                            "type": "string",
                                            "example": "invalid credentials"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request"
                    }
                }
            }
        },
        "/api/client/register": {
            "post": {
                "tags": ["Client"],
                "description": "client register api",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "username",
                                    "email",
                                    "password",
                                    "confirmPassword"
                                ],
                                "properties": {
                                    "username": {
                                        "type": "string",
                                        "example": "dilshan"
                                    },
                                    "email": {
                                        "type": "string",
                                        "example": "dilshansamarakoon2020@gmail.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "dilshan"
                                    },
                                    "confirmPassword": {
                                        "type": "string",
                                        "example": "dilshan"
                                    }
                                }
                            },
                            "example": {
                                "username": "dilshan",
                                "email": "dilshansamarakoon2020@gmail.com",
                                "password": "dilshan",
                                "confirmPassword": "dilshan"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "register new client",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "msg": {
                                            "type": "string",
                                            "example": "user created successful"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "409": {
                        "description": "Conflict"
                    },
                    "400": {
                        "description": "Bad Request"
                    }
                }
            }
        },
        "/api/auth/current-user": {
            "get": {
                "tags": ["Auth"],
                "description": "user session",
                "responses": {
                    "200": {
                        "description": "get current user session",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "user": {
                                            "type": "object",
                                            "properties": {
                                                "id": {
                                                    "type": "number"
                                                },
                                                "email": {
                                                    "type": "string"
                                                },
                                                "role": {
                                                    "type": "string"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "400": {
                        "description": "Bad Request"
                    }
                }
            }
        },
        "/api/auth/logout": {
            "post": {
                "tags": ["Auth"],
                "description": "Logout User",
                "responses": {
                    "204": {
                        "description": "logout user successful",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "msg": {
                                            "type": "string",
                                            "example": "logout success"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request"
                    }
                }
            }
        },
        "/api/jobs": {
            "post": {
                "tags": ["Jobs"],
                "description": "Job Opening",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "title",
                                    "description",
                                    "typeId",
                                    "categoryId",
                                    "experienceId",
                                    "qualificationId",
                                    "maxSalary",
                                    "minSalary",
                                    "location"
                                ],
                                "properties": {
                                    "title": {
                                        "type": "string",
                                        "example": "Software Engineer"
                                    },
                                    "description": {
                                        "type": "string",
                                        "example": "We are looking for a skilled software engineer to join our team."
                                    },
                                    "typeId": {
                                        "type": "number",
                                        "example": 1
                                    },
                                    "categoryId": {
                                        "type": "number",
                                        "example": 2
                                    },
                                    "experienceId": {
                                        "type": "number",
                                        "example": 3
                                    },
                                    "qualificationId": {
                                        "type": "number",
                                        "example": 2
                                    },
                                    "maxSalary": {
                                        "type": "number",
                                        "example": 80000
                                    },
                                    "minSalary": {
                                        "type": "number",
                                        "example": 100000
                                    },
                                    "location": {
                                        "type": "string",
                                        "example": "New York, NY"
                                    }
                                }
                            },
                            "example": {
                                "title": "Software Engineer",
                                "description": "We are looking for a skilled software engineer to join our team.",
                                "typeId": 1,
                                "categoryId": 2,
                                "experienceId": 3,
                                "qualificationId": 2,
                                "maxSalary": 80000,
                                "minSalary": 100000,
                                "location": "New York, NY"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Post a Job",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "msg": {
                                            "type": "string",
                                            "example": "job opening successful"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request"
                    }
                }
            }
        },
        "/api/client/account": {
            "post": {
                "tags": ["Client"],
                "description": "Client account creation",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "companyName",
                                    "fullName",
                                    "phoneNumber"
                                ],
                                "properties": {
                                    "companyName": {
                                        "type": "string",
                                        "example": "techieleaders"
                                    },
                                    "fullName": {
                                        "type": "string",
                                        "example": "dilshan samarakoon"
                                    },
                                    "phoneNumber": {
                                        "type": "string",
                                        "example": "+94765175190"
                                    },
                                    "website": {
                                        "type": "string",
                                        "example": "techieleaders.com"
                                    }
                                }
                            },
                            "example": {
                                "companyName": "techieleaders",
                                "fullName": "dilshan samarakoon",
                                "phoneNumber": "+94765175190",
                                "website": "techieleaders.com"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "client account creation",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "msg": {
                                            "type": "string",
                                            "example": "client account creation successful"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "409": {
                        "description": "Conflict"
                    },
                    "400": {
                        "description": "Bad Request"
                    }
                }
            }
        }
    }
}
