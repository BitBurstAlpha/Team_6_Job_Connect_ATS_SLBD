{
    "openapi": "3.0.3",
    "info": {
        "title": "LSBU Job Connect ATS"
    },
    "paths": {
        "/api/applicant/register": {
            "post": {
                "tags": ["Applicant"],
                "description": "applicant register api",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "username",
                                    "email",
                                    "password",
                                    "confirmPassword"
                                ],
                                "properties": {
                                    "username": {
                                        "type": "string",
                                        "example": "abu"
                                    },
                                    "email": {
                                        "type": "string",
                                        "example": "abusufians808@gmail.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "abusufians"
                                    },
                                    "confirmPassword": {
                                        "type": "string",
                                        "example": "abusufians"
                                    }
                                }
                            },
                            "example": {
                                "username": "abu",
                                "email": "abusufians808@gmail.com",
                                "password": "abusufians",
                                "confirmPassword": "abusufians"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "register new user",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "msg": {
                                            "type": "string",
                                            "example": "user created successful"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "409": {
                        "description": "Conflict"
                    },
                    "400": {
                        "description": "Bad Request"
                    }
                }
            }
        },
        "/api/auth/create-session": {
            "post": {
                "tags": ["Auth"],
                "description": "candidate login",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": ["email", "password"],
                                "properties": {
                                    "email": {
                                        "type": "string",
                                        "example": "dilshansamarakoon2020@gmail.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "dilshan"
                                    }
                                }
                            },
                            "example": {
                                "email": "dilshansamarakoon2020@gmail.com",
                                "password": "dilshan"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "login candidate user",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "msg": {
                                            "type": "string",
                                            "example": "login success!"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "msg": {
                                            "type": "string",
                                            "example": "invalid credentials"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request"
                    }
                }
            }
        },
        "/api/client/register": {
            "post": {
                "tags": ["Client"],
                "description": "client register api",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "username",
                                    "email",
                                    "password",
                                    "confirmPassword"
                                ],
                                "properties": {
                                    "username": {
                                        "type": "string",
                                        "example": "dilshan"
                                    },
                                    "email": {
                                        "type": "string",
                                        "example": "dilshansamarakoon2020@gmail.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "example": "dilshan"
                                    },
                                    "confirmPassword": {
                                        "type": "string",
                                        "example": "dilshan"
                                    }
                                }
                            },
                            "example": {
                                "username": "dilshan",
                                "email": "dilshansamarakoon2020@gmail.com",
                                "password": "dilshan",
                                "confirmPassword": "dilshan"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "register new client",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "msg": {
                                            "type": "string",
                                            "example": "user created successful"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "409": {
                        "description": "Conflict"
                    },
                    "400": {
                        "description": "Bad Request"
                    }
                }
            }
        },
        "/api/auth/current-user": {
            "get": {
                "tags": ["Auth"],
                "description": "user session",
                "responses": {
                    "200": {
                        "description": "get current user session",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "user": {
                                            "type": "object",
                                            "properties": {
                                                "id": {
                                                    "type": "number"
                                                },
                                                "email": {
                                                    "type": "string"
                                                },
                                                "role": {
                                                    "type": "string"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "400": {
                        "description": "Bad Request"
                    }
                }
            }
        },
        "/api/auth/logout": {
            "post": {
                "tags": ["Auth"],
                "description": "Logout User",
                "responses": {
                    "204": {
                        "description": "logout user successful",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "msg": {
                                            "type": "string",
                                            "example": "logout success"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Bad Request"
                    }
                }
            }
        }
    }
}
